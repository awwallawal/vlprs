{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts src/db/migrate.ts src/db/seed-production.ts src/db/seed-demo.ts src/cli/createAdmin.ts src/cli/deactivateAdmin.ts --format esm",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:triggers": "tsx src/db/applyTriggers.ts",
    "db:push": "drizzle-kit push && tsx src/db/applyTriggers.ts",
    "seed:demo": "tsx src/db/seed-demo.ts",
    "seed:prod": "tsx src/db/seed-production.ts",
    "user:create-admin": "tsx src/cli/createAdmin.ts",
    "user:deactivate-admin": "tsx src/cli/deactivateAdmin.ts"
  },
  "dependencies": {
    "@vlprs/shared": "workspace:^",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.45.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "resend": "^6.9.2",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.31.9",
    "supertest": "^7.1.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.7.3",
    "vitest": "^3.2.1"
  }
}
