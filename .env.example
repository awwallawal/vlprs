# Database
# Note: Port 5433 maps to container port 5432 (see compose.dev.yaml).
# Change to 5432 if no other PostgreSQL instance is running on your machine.
DATABASE_URL=postgresql://vlprs:vlprs_dev@localhost:5433/vlprs_dev

# JWT (Story 1.2 will use these)
JWT_SECRET=change-me-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Server
PORT=3001
NODE_ENV=development

# Client
VITE_API_URL=http://localhost:3001/api

# CSRF (Story 1.3)
CSRF_SECRET=change-csrf-secret-in-production-min-32-chars

# Session (Story 1.3)
INACTIVITY_TIMEOUT_MINUTES=30

# Email (Story 1.5+ will use)
RESEND_API_KEY=

# reCAPTCHA (Story 1.6)
RECAPTCHA_SECRET_KEY=
VITE_RECAPTCHA_SITE_KEY=               # Leave empty for local dev (reCAPTCHA skipped)

# Infrastructure (Story 1.7 will use)
DROPLET_IP=
DROPLET_SSH_KEY=
DO_SPACES_KEY=
DO_SPACES_SECRET=
GHCR_TOKEN=
